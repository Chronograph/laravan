; {{ ansible_managed }}

[laravan-{{ item }}]
listen = /var/run/php{{ item }}-laravan.sock
listen.owner = {{ web_group }}
listen.group = {{ web_group }}
user = {{ web_user }}
group = {{ web_group }}
pm = dynamic
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 3
pm.max_requests = 500
chdir = {{ webroot }}/
php_flag[log_errors] = on
php_flag[display_errors] = {{ php_display_errors }}
php_admin_value[open_basedir] = {{ webroot }}/:/tmp
