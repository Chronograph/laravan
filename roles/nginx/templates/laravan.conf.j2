# {{ ansible_managed }}

# Prevent scripts from being executed inside the storage folder.
location ~* /storage/.*\.php$ {
  deny all;
}

# # Browser-cache static files
# location ~*  \.(jpg|jpeg|png|gif|ico|css|js|pdf)$ {
